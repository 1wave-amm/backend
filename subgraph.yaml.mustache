specVersion: 0.0.4
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum/contract
    name: '{{StudioProFactory.name}}'
    network: {{network}}
    source:
      address: '{{StudioProFactory.address}}'
      abi: StudioProFactory
      startBlock: {{StudioProFactory.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings.ts
      entities:
        - Vault
      abis:
        - name: StudioProFactory
          file: ./abis/StudioProFactory.json
      eventHandlers:
        - event: VaultCreated(indexed address,(address,address,uint256,uint256,bool,uint256,uint256,uint256,address[],address[],address[],address[],address[],address[],address[],address[],address[]),(address,uint256,uint256,uint256,uint256))
          handler: handleVaultCreated
          receipt: true
  - kind: ethereum/contract
    name: WaveSwap
    network: {{network}}
    source:
      address: '0xa9e35ef3cc6493c61cc782c373a5f076aaae2f98'
      abi: WaveSwap
      startBlock: 38528274
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings.ts
      entities:
        - Swap
      abis:
        - name: WaveSwap
          file: ./abis/WaveSwap.json
      eventHandlers:
        - event: SwapExactIn(indexed address,indexed address,indexed address,uint256,uint256)
          handler: handleSwapExactIn
          receipt: true
        - event: SwapExactOut(indexed address,indexed address,indexed address,uint256,uint256)
          handler: handleSwapExactOut
          receipt: true
templates:
  - name: StudioProVault
    kind: ethereum/contract
    network: {{network}}
    source:
      abi: StudioProVault
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      file: ./src/mappings.ts
      entities:
        - Vault
        - VaultDeposit
        - VaultWithdraw
        - AquaPair
        - AquaStrategy
      abis:
        - name: StudioProVault
          file: ./abis/StudioProVault.json
        - name: AquaAdapter
          file: ./abis/AquaAdapter.json
      eventHandlers:
        - event: Deposit(indexed address,indexed address,address,uint256,uint256)
          handler: handleDeposit
          receipt: true
        - event: Withdraw(address,address,address,address,uint256,uint256)
          handler: handleWithdraw
          receipt: true
        - event: PairSet(address,address,uint256,bytes32)
          handler: handlePairSet
          receipt: true
        - event: StrategyShipped(bytes32,bytes32)
          handler: handleStrategyShipped
          receipt: true